@page "/learnblazor/learnprop"
<h3>LearnProp</h3>

<h3>Product</h3>
 Name: @Product.Name
<br />
 Active: @Product.IsActive
<br />

 Price : @Product.Price
<br />

This product is:@GetValue()
<br />

<input type="checkbox" checked @bind-value="@Product.IsActive" @bind-value:event="oninput" />
<br />
Price:
<input type="number" @bind-value="@Product.Price" @bind-value:event="oninput" />
@*Price:  <input  type="number" @bind="@Product.Price" @bind:event="oninput" />*@


@code {
    Tangy_Models.LearnBlazorModels.Demo_Product Product = new()
        {
            Id = 1,
            Name = "Rose Candle",
            IsActive = true,
            Price = 10.99
        };
    private string GetValue()
    {
        if (Product.IsActive) return "Active";
        return "NoActive";
    }
}
